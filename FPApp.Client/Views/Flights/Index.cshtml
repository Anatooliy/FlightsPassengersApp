@model IEnumerable<FPApp.Client.Models.FlightViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Flights schedule</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CityFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CityTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FlightTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CityFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CityTo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FlightTime)
        </td>
        <td>
            @Html.ActionLink("See all passengers", "Details", new { id = item.Id })
            <br>
            @Html.ActionLink("See unchecked in passengers", "Details", new { id = item.Id, showAll = false })
        </td>
    </tr>
}

</table>
